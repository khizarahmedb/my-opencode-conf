{
  "name": "remote-mcp-server",
  "version": "1.0.0",
  "description": "MCP server with HTTP transport for remote access",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:secure": "MCP_API_KEY=your-secret-key node server.js",
