    "pm2:stop": "pm2 stop remote-mcp",
    "pm2:logs": "pm2 logs remote-mcp"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
